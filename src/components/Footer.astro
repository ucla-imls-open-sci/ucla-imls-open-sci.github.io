---
import { siteConfig } from '../site_config';
---
<footer class="footer" id="footer" style="background-color: white">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-4">
        <span class="copyright">
          Copyright &copy; Creative Commons Attribution 4.0 {new Date().getFullYear()}
        </span>
      </div>
      <!-- image -->
      <div class="col-md-4">
        <ul class="image" style="padding-left: 0; list-style: none; text-align: center;">
            <a href="https://www.imls.gov" target="_blank" rel="noopener noreferrer">
                <img src="/assets/img/imls_logo_2c.png" alt="Institute of Museum and Library Services" style="max-height: 50px;" />
            </a>
        </ul>
      </div>
      <!-- Legal -->
      <div class="col-md-4">
        <ul class="list-inline quicklinks">
          <li class="list-inline-item">
            <a href="https://www.ucla.edu/terms-of-use">Privacy Policy</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="row mt-3">
        <div class="col-lg-12 text-center">
            <p class="small text-muted" style="font-size: 0.75rem; line-height: 1.4;">
                The views, findings, conclusions or recommendations expressed in this website do not necessarily represent those of the Institute of Museum and Library Services.
            </p>
        </div>
    </div>
  </div>
</footer>

<script>
  function fixPageShort() {
    const footer = document.getElementById("footer");
    if (footer && window.innerHeight > document.body.offsetHeight) {
      footer.style.position = "fixed";
      footer.style.bottom = "0";
      footer.style.right = "0";
      footer.style.left = "0";
      footer.style.width = "100%";
    }
  }
  
  // Run on load and resize
  window.addEventListener('load', fixPageShort);
  window.addEventListener('resize', fixPageShort);
</script>
