---
import { siteConfig } from '../site_config';
---
<footer class="footer" id="footer" style="background-color: white">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-4">
        <span class="copyright">
          Copyright &copy; Creative Commons Attribution 4.0 {new Date().getFullYear()}
        </span>
      </div>
      <!-- image -->
      <div class="col-md-4">
        <ul class="image" style="padding-left: 0; list-style: none; text-align: center;">
            <img src="/assets/img/imls_logo_2c.png" alt="IMLS_logo" style="max-height: 50px;" />
        </ul>
      </div>
      <!-- Legal -->
      <div class="col-md-4">
        <ul class="list-inline quicklinks">
          <li class="list-inline-item">
            <a href="https://www.ucla.edu/terms-of-use">Privacy Policy</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>

<script>
  function fixPageShort() {
    const footer = document.getElementById("footer");
    if (footer && window.innerHeight > document.body.offsetHeight) {
      footer.style.position = "fixed";
      footer.style.bottom = "0";
      footer.style.right = "0";
      footer.style.left = "0";
      footer.style.width = "100%";
    }
  }
  
  // Run on load and resize
  window.addEventListener('load', fixPageShort);
  window.addEventListener('resize', fixPageShort);
</script>
