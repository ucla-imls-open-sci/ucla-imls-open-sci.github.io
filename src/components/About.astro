---
import { siteConfig } from '../site_config';
import siteTextData from '../data/sitetext.yml';
import { marked } from 'marked';

const t = (siteTextData as any)[siteConfig.locale];
const about = t.about;
---
<section class="bg-light page-section" id={about.section || "about"}>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">{about.title || "About Us"}</h2>
        <h3 class="section-subheading text-muted">{about.text || ""}</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 mx-auto text-center">
        <div class="large text-muted" set:html={marked.parse(about.body || "")}></div>
      </div>
    </div>
  </div>
</section>
