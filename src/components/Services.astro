---
import { siteConfig } from '../site_config';
import siteTextData from '../data/sitetext.yml';
import { marked } from 'marked';

const t = (siteTextData as any)[siteConfig.locale];
const services = t.services;
---
<section class="page-section" id={services.section || "services"}>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">{services.title || "Services"}</h2>
        {/* eslint-disable-next-line jsx-a11y/heading-has-content */}
        {services.text && <h3 class="section-subheading text-muted" set:html={marked.parse(services.text)} />}
      </div>
    </div>
    
    <div class="row text-center">
      {services.list.map((service: any) => (
        <div class="col-md-4">
          <span class="fa-stack fa-4x">
            <i class="fas fa-circle fa-stack-2x text-primary"></i>
            <i class={`${service.icon || "fas fa-shopping-cart"} fa-stack-1x fa-inverse`}></i>
          </span>
          {/* eslint-disable-next-line jsx-a11y/heading-has-content */}
          <h4 class="service-heading" set:html={marked.parseInline(service.title || "")}></h4>
          {service.desc && <div class="text-muted" set:html={marked.parse(service.desc)} />}
        </div>
      ))}
    </div>

    <div class="another_title">
      <div class="row">
        <div class="col-lg-12 text-center">
          {services.another_title && (
            /* eslint-disable-next-line jsx-a11y/heading-has-content */
            <h2 class="section-heading text-uppercase js-scroll-trigger active" set:html={marked.parse(services.another_title)} />
          )}
        </div>
      </div>
    </div>
  </div>
</section>
