---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---
<Layout title={entry.data.title}>
  <!-- Adding extra padding-top to account for fixed navbar if page-section doesn't cover it enough, 
       but page-section usually has 100px padding. -->
  <section class="page-section" id="blog-post" style="padding-top: 150px;">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
            <h1>{entry.data.title}</h1>
            <p class="text-muted">
                {entry.data.date ? new Date(entry.data.date).toLocaleDateString() : ''} 
                {entry.data.author ? ` - ${entry.data.author}` : ''}
            </p>
            <hr />
            <div class="content">
                <Content />
            </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
